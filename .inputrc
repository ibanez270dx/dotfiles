#!/bin/bash

# All of the following map the escape sequence of the value contained inside the 1st argument
# to the readline specific functions
"\e[1~": beginning-of-line
"\e[4~": end-of-line
"\e[5~": history-search-backward
"\e[6~": history-search-forward
"\e[3~": delete-char
"\e[2~": quoted-insert
"\e[5C": forward-word
"\e[5D": backward-word
"\e\e[C": forward-word
"\e\e[D": backward-word

# Set Readline options
# https://www.gnu.org/software/bash/manual/html_node/Readline-Init-File-Syntax.html
set bell-style visible            # SHUT. THE HELL. UP.
set colored-completion-prefix on  # Displays the common prefix of the set of possible completions using a different color from LS_COLORS.
set colored-stats on              # Displays possible completions using colors from LS_COLORS to indicate their file type.
set completion-ignore-case On     # Ignore case when using tab completion
set convert-meta off              # Turns off 8th bit stripping
set expand-tilde on               # Use tilde expansion (https://www.gnu.org/software/bash/manual/html_node/Tilde-Expansion.html)
set input-meta on                 # Enable 8bit input
set output-meta on                # Keep the 8th bit for display
set show-all-if-ambiguous on      # Completions with more than one possibility are listed immediately (no double tapping tab)
set visible-stats on              # A character denoting a file's type is appended to the filename when listing possible completions.
